{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de la catégorie</h1>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">{{ categorie.nom }}</h5>
                <p class="card-text">
                    <strong>Description:</strong> {{ categorie.description }}<br>
                    <strong>Créée par:</strong> {{ categorie.administrateur ? categorie.administrateur.email : 'Non assigné' }}
                </p>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('admin_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('admin_categorie_index') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}
