{% extends 'base.html.twig' %}

{% block title %}Création d'un Technicien{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Création d'un nouveau technicien</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
            <div class="mb-3">
                {{ form_row(form.nom) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.email) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.password) }}
            </div>
            <button type="submit" class="btn btn-primary">Créer le technicien</button>
        {{ form_end(form) }}
        
        <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Retour au tableau de bord</a>
    </div>
{% endblock %}
