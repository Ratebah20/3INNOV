{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Connexion</h1>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">
                                {% if error.messageKey == 'Invalid credentials.' %}
                                    Identifiants invalides. Veuillez vérifier votre email et mot de passe.
                                {% elseif error.messageKey starts with 'Email introuvable' %}
                                    Email introuvable.
                                {% else %}
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                {% endif %}
                            </div>
                        {% endif %}

                        <div class="form-group">
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" required autofocus>
                        </div>

                        <div class="form-group mt-3">
                            <label for="inputPassword">Mot de passe</label>
                            <input type="password" name="_password" id="inputPassword" class="form-control" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3 mt-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                            </label>
                        </div>

                        <button class="btn btn-lg btn-primary w-100" type="submit">
                            Se connecter
                        </button>
                    </form>
                    
                    <div class="mt-3 text-center">
                        <a href="{{ path('app_register') }}">Créer un compte</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
