{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Changer mon mot de passe</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            <div class="card">
                <div class="card-body">
                    {{ form_row(form.currentPassword, {
                        'attr': {'class': 'form-control'}
                    }) }}
                    
                    {{ form_row(form.newPassword.first, {
                        'attr': {'class': 'form-control'}
                    }) }}
                    
                    {{ form_row(form.newPassword.second, {
                        'attr': {'class': 'form-control'}
                    }) }}

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                        <a href="{{ path('app_profile_index') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
