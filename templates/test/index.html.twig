{# templates/test/index.html.twig #}

<h1>Utilisateur : {{ utilisateur.nom }}</h1>
<p>Email : {{ utilisateur.email }}</p>

<h2>Tickets associés :</h2>
{% if tickets is empty %}
    <p>Aucun ticket trouvé pour cet utilisateur.</p>
{% else %}
    <ul>
    {% for ticket in tickets %}
        <li>Ticket #{{ ticket.id }} - Description: {{ ticket.description }} - Statut: {{ ticket.statut }}</li>
    {% endfor %}
    </ul>
{% endif %}
